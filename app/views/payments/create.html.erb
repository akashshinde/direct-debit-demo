<div class="container">
  <h4 class="title is-4">Create Payment</h4>
  <hr>

  <%= form_for :create_payment, :url => {:action => "create_payment", :customer_id => @customer_id} do |f| %>
    <div class="field">
      <label class="label">Amount</label>
      <p class="control has-icons-right">
        <%= f.text_field :amount, class: 'input is-small', placeholder: '10 GBP (Â£)' %>
        <span class="icon is-small is-left"></span>
      </p>
    </div>
    <div class="field">
      <label class="label">Description</label>
      <div class="control">
        <%= f.text_field :description, class: 'input is-small', placeholder: 'What is the payment for?' %>
      </div>
    </div>
    <div class="field">
    <div class="control">
      <label class="radio">
        <%= f.radio_button :payment_date, 'payment', checked: true %> Take payment as soon as possible<br />
      </label>
    </div>
    </div>
    <%= f.button :submit, class: 'button is-success is-outlined' %>
    </div>
  <% end %>
</div>
